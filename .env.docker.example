# ============================================
# Layout Manager - Docker Environment Variables
# ============================================
# Copy this file to .env and configure all values
# Usage: cp .env.docker.example .env

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_NAME=layout_app
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_PORT=5432
DB_SSL=false

# Database Host - IMPORTANT!
# Use one of the following options:
#
# Option 1: PostgreSQL in Docker container (docker-compose.with-db.yml)
# DB_HOST=postgres
#
# Option 2: PostgreSQL as service on the Docker host machine
# DB_HOST=host.docker.internal
#
# Option 3: PostgreSQL on another server in the network
# DB_HOST=192.168.1.100
#
DB_HOST=postgres

# ============================================
# API CONFIGURATION
# ============================================
NODE_ENV=production
API_PORT=3001

# JWT Secret - REQUIRED! Generate with:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
VITE_JWT_SECRET=your_jwt_secret_here_change_this

# CORS Configuration
# Use * for development, specific origins for production
CORS_ORIGIN=*

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_PORT=80

# API URL - Use /api for Docker (proxied by nginx)
VITE_API_URL=/api

# Docker environment flag
VITE_DOCKER=true

